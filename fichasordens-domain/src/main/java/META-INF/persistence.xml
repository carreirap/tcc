<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="test"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.com.fichasordens.entities.AtendimentoFichaEntity</class>
		<class>br.com.fichasordens.entities.AtendimentoFichaId</class>
		<class>br.com.fichasordens.entities.ClienteEntity</class>
		<class>br.com.fichasordens.entities.EmpresaEntity</class>
		<class>br.com.fichasordens.entities.EnderecoEntity</class>
		<class>br.com.fichasordens.entities.FichaAtendLanc</class>
		<class>br.com.fichasordens.entities.FichaAtendLancId</class>
		<class>br.com.fichasordens.entities.FichaAtendimento</class>
		<class>br.com.fichasordens.entities.OrdemServicoEntity</class>
		<class>br.com.fichasordens.entities.ParametroEntity</class>
		<class>br.com.fichasordens.entities.PecaServicoFicha</class>
		<class>br.com.fichasordens.entities.PecaServicoFichaId</class>
		<class>br.com.fichasordens.entities.PecaServicoOrdemEntity</class>
		<class>br.com.fichasordens.entities.PecaServicoOrdemEntityId</class>
		<class>br.com.fichasordens.entities.UsuarioEntity</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/postgres"></property>
			<property name="javax.persistence.jdbc.user" value="carreira" />
			<property name="javax.persistence.jdbc.password" value="123456" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.connection.shutdown" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>

	</persistence-unit>
</persistence>
